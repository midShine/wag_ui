<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFood">

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_food"
        android:text="@string/app_name"
        android:layout_marginStart="18dp"
        android:textColor="#151515"
        android:textSize="30sp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/img_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/detail_txt"
        android:text="@string/app_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:textColor="#151515"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/name_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/detail_txt"
        android:textSize="20sp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="55dp"
        android:id="@+id/promo_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#151515"
        android:textAlignment="center"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/price_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/price_shape"
        android:padding="8dp"
        android:text="$50"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/img_food"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_buy"
        android:background="@drawable/btn_buy"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>